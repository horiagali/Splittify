<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.SubScene?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.scenes.QuoteOverviewCtrl" alignment="CENTER">

    <fx:define>
        <ToggleGroup fx:id="languageGroup"/>
    </fx:define>

    <!-- MenuBar -->
    <MenuBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="41.0" prefWidth="640.0" VBox.vgrow="NEVER">
        <menus>
            <Menu mnemonicParsing="false" text="Language">
                <items>
                    <RadioMenuItem mnemonicParsing="false" text="English" toggleGroup="$languageGroup" onAction="#changeLanguage" />
                    <RadioMenuItem mnemonicParsing="false" text="Romanian" toggleGroup="$languageGroup" onAction="#changeLanguage" />
                    <RadioMenuItem mnemonicParsing="false" text="Dutch" toggleGroup="$languageGroup" onAction="#changeLanguage" />

                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- AnchorPane 1 -->
    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <SubScene height="346.0" layoutX="176.0" layoutY="5.0" width="289.0" >
                <root>
                    <Region />
                </root>
                <cursor>
                    <Cursor fx:constant="DEFAULT" />
                </cursor>
                <effect>
                    <Blend />
                </effect>
            </SubScene>
            <Text layoutX="261.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Splittify" wrappingWidth="118.66667175292969">
                <font>
                    <Font name="Comic Sans MS" size="24.0" />
                </font>
            </Text>
            <TextField layoutX="204.0" layoutY="99.0"  fx:id="eventName"/>
            <TextField layoutX="204.0" layoutY="180.0" />
            <Button fx:id="createEventButton" layoutX="346.0" layoutY="99.0" mnemonicParsing="false" onAction="#addEvent" text="Create Event" />
            <Button layoutX="346.0" layoutY="180.0" mnemonicParsing="false" text="Join Event" />
            <Text layoutX="283.0" layoutY="250.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your events:" />
        </children>
    </AnchorPane>

    <!-- AnchorPane 2 -->
    <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <TableView fx:id="table" layoutX="14.0" layoutY="14.0" prefHeight="337.0" prefWidth="572.0">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="113.0" text="Event name"/>
                    <TableColumn fx:id="colLocation" prefWidth="114.0" text="Event location"/>
                    <TableColumn fx:id="colDate" prefWidth="344.0" text="Event date"/>
                </columns>
            </TableView>
            <HBox layoutX="2.0" layoutY="359.0" spacing="10" alignment="CENTER_RIGHT">
                <Button layoutX="443.0" layoutY="360.0" mnemonicParsing="false" onAction="#refresh" text="Refresh"/>
                <Button layoutX="443.0" layoutY="360.0" mnemonicParsing="false" onAction="#goToAdminPass" text="Admin"/>
            </HBox>
        </children>
    </AnchorPane>

</VBox>
