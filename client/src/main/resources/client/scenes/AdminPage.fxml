<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.SubScene?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox fx:id="vbox" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.scenes.AdminPageCtrl">
    <children>
        <MenuBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="41.0" prefWidth="640.0" VBox.vgrow="NEVER">
            <menus>
                <!-- MenuBar -->
                <Menu fx:id="languageMenu" mnemonicParsing="false">
                    <graphic>
                        <StackPane alignment="CENTER_LEFT">
                            <!-- ImageView for the flag -->
                            <ImageView fx:id="languageFlagImageView" fitHeight="25" fitWidth="30">
                                <image>
                                    <Image fx:id="languageFlagImage" url="@/client/scenes/images/BritishFlag.png" />
                                </image>
                            </ImageView>
                        </StackPane>
                    </graphic>
                    <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="English">
                            <toggleGroup>
                                <ToggleGroup fx:id="languageGroup" />
                            </toggleGroup>
                            <graphic>
                                <ImageView fitHeight="25" fitWidth="30">
                                    <image>
                                        <Image url="@/client/scenes/images/BritishFlag.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="Romana">
                            <toggleGroup>
                                <fx:reference source="languageGroup" />
                            </toggleGroup>
                            <graphic>
                                <ImageView fitHeight="25" fitWidth="30">
                                    <image>
                                        <Image url="@/client/scenes/images/RomanianFlag.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="Nederlands">
                            <toggleGroup>
                                <fx:reference source="languageGroup" />
                            </toggleGroup>
                            <graphic>
                                <ImageView fitHeight="25" fitWidth="30">
                                    <image>
                                        <Image url="@/client/scenes/images/DutchFlag.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </RadioMenuItem>
                    </items>
                </Menu>
            </menus>
            <tooltip>
                <Tooltip text="Empty Tooltip"/>
            </tooltip>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <SubScene height="346.0" layoutX="176.0" layoutY="5.0" width="289.0">
                    <root>
                        <Region/>
                    </root>
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                    <effect>
                        <Blend/>
                    </effect>
                </SubScene>
                <Text layoutX="204.0" layoutY="65.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Admin Overview"
                      wrappingWidth="214.66665649414062">
                    <font>
                        <Font name="Comic Sans MS" size="24.0"/>
                    </font>
                </Text>
                <Text layoutX="204.0" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="very secret page"
                      wrappingWidth="214.66665649414062">
                    <font>
                        <Font name="Mongolian Baiti" size="24.0"/>
                    </font>
                </Text>
            </children>

            <children>
                <TableView fx:id="table" layoutX="14.0" layoutY="14.0" prefHeight="337.0" prefWidth="572.0">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="113.0" text="Event name"/>
                        <TableColumn fx:id="colLocation" prefWidth="114.0" text="Event location"/>
                        <TableColumn fx:id="colDate" prefWidth="344.0" text="Event date"/>
                    </columns>
                </TableView>
            </children>
            <VBox layoutX="346.0" layoutY="360.0" spacing="10">
                <HBox spacing="10">
                    <Button fx:id="backButton" onAction="#goBack" mnemonicParsing="false" text="Back"/>
                    <Button fx:id="downloadJsonButton" mnemonicParsing="false" onAction="#downloadJson" text="Download JSON" />
                    <Button fx:id="importJsonButton" mnemonicParsing="false" onAction="#importJson" text="Import JSON" />
                    <Button fx:id="refreshButton"  mnemonicParsing="false" onAction="#refresh" text="Refresh" />

                </HBox>
            </VBox>
        </AnchorPane>
        <AnchorPane prefHeight="200.0" prefWidth="200.0"/>
    </children>
</VBox>
