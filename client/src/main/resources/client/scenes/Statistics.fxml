<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.StatisticsCtrl">

    <fx:define>
        <ToggleGroup fx:id="languageGroup" />
    </fx:define>

    <!-- MenuBar -->
    <MenuBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="41.0" prefWidth="640.0" VBox.vgrow="NEVER">
        <menus>
            <Menu fx:id="languageMenu" mnemonicParsing="false" text="Language">
                <items>
                    <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="English">
                  <toggleGroup>
                     <ToggleGroup fx:id="languageGroup" />
                  </toggleGroup></RadioMenuItem>
                    <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="Romana" toggleGroup="$languageGroup" />
                    <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="Nederlands" toggleGroup="$languageGroup" />

                </items>
            </Menu>
        </menus>
    </MenuBar>
   <AnchorPane prefHeight="3.0" prefWidth="640.0">
      <children>
         <Button layoutX="548.0" layoutY="189.0" mnemonicParsing="false" onAction="#back" text="Back" />
         <PieChart layoutY="3.0" legendSide="RIGHT" prefHeight="401.0" prefWidth="500.0" title="Statistics" />
         <Button layoutX="548.0" layoutY="225.0" mnemonicParsing="false" onAction="#refresh" text="Refresh" />
      </children>
   </AnchorPane>

</VBox>
