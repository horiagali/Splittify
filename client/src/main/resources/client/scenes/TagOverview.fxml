<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="743.0" prefWidth="881.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.TagOverviewCtrl">

    <fx:define>
        <ToggleGroup fx:id="languageGroup" />
    </fx:define>

    <!-- MenuBar -->
    <MenuBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="41.0" prefWidth="640.0" VBox.vgrow="NEVER">
        <menus>
            <Menu fx:id="languageMenu" mnemonicParsing="false" text="Language">
                <items>
                    <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="English">
                  <toggleGroup>
                     <ToggleGroup fx:id="languageGroup" />
                  </toggleGroup></RadioMenuItem>
                    <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="Romana" toggleGroup="$languageGroup" />
                    <RadioMenuItem mnemonicParsing="false" onAction="#changeLanguage" text="Nederlands" toggleGroup="$languageGroup" />

                </items>
            </Menu>
        </menus>
    </MenuBar>
   <AnchorPane prefHeight="705.0" prefWidth="882.0">
      <children>
         <Button fx:id="back" layoutX="768.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" text="Back" />
         <Label layoutX="193.0" layoutY="426.0" style="-fx-border-radius: 10; -fx-border-width: 3;" text="TEST Lorem ipsum">
            <font>
               <Font name="Corbel Bold" size="12.0" />
            </font>
         </Label>
         <FlowPane fx:id="flowPane" hgap="10.0" layoutX="307.0" layoutY="180.0" prefHeight="260.0" prefWidth="267.0" style="-fx-border-radius: 60; -fx-background-color: pink;" vgap="20.0">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </FlowPane>
      </children>
   </AnchorPane>

</VBox>
